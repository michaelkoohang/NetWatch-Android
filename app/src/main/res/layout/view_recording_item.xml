<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="24dp"
  android:layout_marginEnd="24dp"
  android:layout_marginBottom="16dp"
  android:background="@drawable/view_recording_item"
  android:foregroundTint="@color/black">

  <TextView
    android:id="@+id/date_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="18dp"
    android:fontFamily="@font/work_sans"
    android:text="02/16/2021 - 2:06 PM"
    android:textColor="@color/gray"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/description_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:fontFamily="@font/work_sans"
    android:text="Tuesday Afternoon Hike"
    android:textColor="@color/black"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="@id/date_text"
    app:layout_constraintTop_toBottomOf="@id/date_text" />

  <TextView
    android:id="@+id/connectivity_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="8dp"
    android:fontFamily="@font/work_sans_medium"
    android:text="2"
    android:textColor="@color/black"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/description_text" />

  <TextView
    android:id="@+id/distance_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:fontFamily="@font/work_sans_medium"
    android:text="2.4 km"
    android:textColor="@color/black"
    android:textSize="14sp"
    app:layout_constraintStart_toEndOf="@+id/connectivity_label"
    app:layout_constraintTop_toTopOf="@+id/connectivity_text" />

  <TextView
    android:id="@+id/time_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:fontFamily="@font/work_sans_medium"
    android:text="00:00:00"
    android:textColor="@color/black"
    android:textSize="14sp"
    app:layout_constraintStart_toEndOf="@+id/distance_label"
    app:layout_constraintTop_toTopOf="@+id/distance_text" />

  <TextView
    android:id="@+id/connectivity_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    android:fontFamily="@font/work_sans"
    android:text="@string/hikes_connectivity"
    android:textColor="@color/gray"
    android:textSize="14sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="@+id/connectivity_text"
    app:layout_constraintTop_toBottomOf="@+id/connectivity_text" />

  <TextView
    android:id="@+id/distance_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/work_sans"
    android:text="@string/hikes_distance"
    android:textColor="@color/gray"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="@+id/distance_text"
    app:layout_constraintTop_toBottomOf="@+id/distance_text" />

  <TextView
    android:id="@+id/time_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:fontFamily="@font/work_sans"
    android:text="@string/hikes_time"
    android:textColor="@color/gray"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="@+id/time_text"
    app:layout_constraintTop_toBottomOf="@+id/time_text" />


</androidx.constraintlayout.widget.ConstraintLayout>